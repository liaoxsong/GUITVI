<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:id="@+id/onerowid">


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/albumView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/givemelovecover"
        android:visibility="gone"
        android:padding="2dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"

        android:layout_toRightOf="@+id/albumView"
        android:layout_toEndOf="@+id/albumView"
        android:layout_alignParentBottom="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Give Me Love"
            android:id="@+id/titleView"
            android:textColor="@android:color/black"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Ed Sheeran"
            android:id="@+id/singerView"
            android:textColor="@android:color/black"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"/>
    </LinearLayout>

</RelativeLayout>